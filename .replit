modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "libGL", "libGLU", "pkg-config", "qhull", "tcl", "tk"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Traffic Management System"

[[workflows.workflow]]
name = "Traffic Management System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python enhanced_app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46015
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "enhanced_app.py"]
